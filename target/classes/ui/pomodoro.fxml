<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studyhelper.controller.PomodoroController">
    <children>
            <Label fx:id="studyTimerLabel" layoutX="276.0" layoutY="221.0" text="00:00:00" textFill="#404040a8">
                <font>
                    <Font name="System Bold" size="72.0" />
                </font>
            </Label>
            <TextField fx:id="studySessionTimeTextField" layoutX="130.0" layoutY="13.0" prefHeight="25.0" prefWidth="37.0" promptText="25" />
            <TextField fx:id="miniPauseTimeTextField" layoutX="130.0" layoutY="50.0" prefHeight="25.0" prefWidth="38.0" promptText="5" />
            <TextField fx:id="largePauseTimeTextField" layoutX="130.0" layoutY="90.0" prefHeight="25.0" prefWidth="39.0" promptText="20" />
            <ChoiceBox fx:id="courseChoiceBox" layoutX="130.0" layoutY="127.0" prefHeight="25.0" prefWidth="109.0" />
            <Button fx:id="startTimerBtn" defaultButton="true" layoutX="362.0" layoutY="209.0" mnemonicParsing="false" onAction="#startTimer">
                <tooltip><Tooltip text="%pomodoro.startButton.tooltip" /></tooltip>
                <graphic>
                    <ImageView>
                        <Image url="@icons/play-button-white-16.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="pauseTimerBtn" disable="true" layoutX="404.0" layoutY="209.0" mnemonicParsing="false" onAction="#onPauseTimer">
                <tooltip><Tooltip text="%pomodoro.pauseButton.tooltip" /></tooltip>
                <graphic>
                    <ImageView>
                        <Image url="@icons/pause-white-16.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="endTimerBtn" cancelButton="true" contentDisplay="CENTER" disable="true" layoutX="447.0" layoutY="209.0" mnemonicParsing="false" onAction="#onEndTimer">
                <tooltip><Tooltip text="%pomodoro.endButton.tooltip" /></tooltip>
                <graphic>
                    <ImageView>
                        <Image url="@icons/stop-button-white-16.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="skipPauseBtn" cancelButton="true" layoutX="400.0" layoutY="387.0" mnemonicParsing="false" onAction="#onSkipPauseButtonAction" visible="false">
                <tooltip><Tooltip text="%pomodoro.skipButton.tooltip" /></tooltip>
                <graphic>
                    <ImageView>
                        <Image url="@icons/skip-pause-white-16.png" />
                    </ImageView>
                </graphic>
            </Button>
            <ProgressBar fx:id="timerProgress" layoutX="320.0" layoutY="326.0" prefWidth="200.0" progress="0.0" />
            <Label fx:id="studySessionLabel" layoutX="14.0" layoutY="17.0" text="%pomodoro.studySession.label" textFill="#0d6300" />
            <Label layoutX="14.0" layoutY="54.0" text="%pomodoro.miniPause.label" textFill="#993000" />
            <Label layoutX="14.0" layoutY="94.0" text="%pomodoro.largePause.label" textFill="#993000" />
            <Label layoutX="14.0" layoutY="131.0" text="%pomodoro.courseToStudy.label" />
            <Label layoutX="356.0" layoutY="362.0" text="%pomodoro.currently.label" />
            <Label fx:id="studyStateLabel" layoutX="420.0" layoutY="362.0" text="___" />
    </children>
</AnchorPane>
