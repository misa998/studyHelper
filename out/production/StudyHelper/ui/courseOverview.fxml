<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="courseOverviewAnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studyhelper.controller.CourseOverviewController">
      <children>

         <Button fx:id="addCourseButton" layoutX="21.0" layoutY="14.0" mnemonicParsing="false" onAction="#addCourseButtonAction">
            <tooltip><Tooltip text="Add new course" /></tooltip>
            <graphic>
               <ImageView>
                  <Image url="@icons/add-course-white-16.png" />
               </ImageView>
            </graphic>
         </Button>

         <ScrollPane fx:id="scrollPaneCourses" hbarPolicy="NEVER" layoutX="8.0" layoutY="45.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="502.0" prefWidth="161.0" styleClass="scrollPane">
            <content>
               <VBox fx:id="vBoxCourses" alignment="CENTER" spacing="10.0">
                  <children>
                     <VBox fx:id="vBoxEachCourse" alignment="CENTER" maxHeight="138.0" maxWidth="140.0" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#vboxCoursesOnAction" prefHeight="120.0" prefWidth="118.0" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #393351; -fx-background-color: #393351; -fx-border-width: 3; -fx-border-style: solid;" styleClass="vBoxEachCourses" VBox.vgrow="ALWAYS">
                        <children>
                           <TextField fx:id="courseNameTextField" alignment="CENTER" promptText="course name" style="-fx-alignment: center; -fx-background-color: transparent; -fx-text-fill: #cdcdcd;" />
                           <Label alignment="CENTER" contentDisplay="CENTER" text="Hours spent" textAlignment="CENTER" textFill="#bcbcbc" wrapText="true">
                              <VBox.margin>
                                 <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                              </VBox.margin>
                           </Label>
                           <Label text="Due" textFill="#bf7878" />
                        </children>
                     </VBox>
                  </children>
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
               </VBox>
            </content>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         </ScrollPane>

         <TableView fx:id="todoTableView" editable="true" layoutX="459.0" layoutY="58.0" prefHeight="148.0" prefWidth="353.0">
            <columns>
               <TableColumn fx:id="selectTableColumn" prefWidth="53.0" />
               <TableColumn fx:id="itemTableColumn" onEditCommit="#itemCellOnEditCommit" prefWidth="270.0" text="Todo list for a course" />
            </columns>
         </TableView>

         <TextField fx:id="todoTextField" layoutX="582.0" layoutY="14.0" promptText="Enter your todo item" />

         <Button fx:id="addTodo" alignment="CENTER" layoutX="745.0" layoutY="14.0" mnemonicParsing="false" onAction="#addTodoOnAction" textFill="#618cb0">
            <tooltip><Tooltip text="Add new todo item" /></tooltip>
            <graphic>
               <ImageView>
                  <Image url="@icons/todo-add-white-16.png" />
               </ImageView>
            </graphic>
         </Button>

         <Button fx:id="deleteSelectedTodo" disable="true" layoutX="745.0" layoutY="215.0" mnemonicParsing="false" onAction="#onActionDeleteSelectedTodo">
            <tooltip><Tooltip text="Delete todo item" /></tooltip>
            <graphic>
               <ImageView>
                  <Image url="@icons/todo-delete-white-16.png" />
               </ImageView>
            </graphic>
         </Button>

         <ProgressIndicator fx:id="todoProgressIndicator" layoutX="482.0" layoutY="207.0" progress="0.0" />

         <Button fx:id="deleteCourse" layoutX="101.0" layoutY="15.0" mnemonicParsing="false" onAction="#onActionDeleteSelectedCourse">
            <tooltip><Tooltip text="Delete course" /></tooltip>
            <graphic>
               <ImageView>
                  <Image url="@icons/delete-white-16.png" />
               </ImageView>
            </graphic>
         </Button>

         <TextArea fx:id="courseDescription" layoutX="200.0" layoutY="58.0" prefHeight="72.0" prefWidth="179.0" promptText="Course description" style="-fx-background-color: transparent;" styleClass="text-area" wrapText="true" />

         <Label layoutX="200.0" layoutY="37.0" text="Description" />

   </children>
</AnchorPane>
